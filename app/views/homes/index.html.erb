<!-- app/views/home/index.html.erb -->

<!DOCTYPE html>
<html>
<head>
  <title>人狼ゲーム</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</head>
<body>
  <div class="container">
    <% if user_signed_in? %>
      <h1>こんにちは、村人さん！</h1>
      <p><%= link_to '新しいゲームを作成する', new_game_path %></p>
      <p><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></p>
    <% else %>
      <div class="jumbotron mt-5">
        <h1 class="display-4">人狼ゲーム</h1>
        <p class="lead">これはRuby on RailsとBootstrapを使用して作成された人狼ゲームです。</p>
        <hr class="my-4">
        <p>ゲームを開始するにはログインしてください。</p>
        <%= link_to 'ログイン', new_user_session_path, class: 'btn btn-primary btn-lg' %>
      </div>
    <% end %>
  </div>
</body>
</html>
